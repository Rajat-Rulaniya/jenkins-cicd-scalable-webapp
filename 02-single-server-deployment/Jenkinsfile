pipeline {
    agent any

    environment {
        SERVER_IP = credentials('prod-server-ip')
    }
    stages {
        stage("Setup"){
            steps{
                sh '''
                cd 02-single-server-deployment
                python3 -m venv venv
                . venv/bin/activate
                pip install -r requirements.txt
                '''
            }
        }

        stage("Test"){
            steps{
                sh '''
                cd 02-single-server-deployment
                . venv/bin/activate
                pytest
                '''
            }
        }

        stage("Package Code"){
            steps {
                sh "zip -r ~/ansible/flaskapp/myapp-build-${env.BUILD_NUMBER}.zip ./* -x '*.git*'"
            }
        }

        stage("Deploy Code to App server") {
            steps {
                ansiblePlaybook(
                    playbook: '~/ansible/flaskapp/app_deploy.yml',
                    inventory: '~/ansible/flaskapp/hosts.ini',
                    extravars: [
                        buildNumber: env.BUILD_NUMBER
                    ]
                )
            }
        }
    }

    post {
        always {
            sh "rm -f ~/ansible/flaskapp/myapp-build-${env.BUILD_NUMBER}.zip || true"
        }
    }
}